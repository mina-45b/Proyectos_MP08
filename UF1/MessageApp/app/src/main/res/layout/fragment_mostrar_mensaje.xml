<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MostrarMensajeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/asunto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:paddingTop="5sp"
            android:textSize="24dp"
            android:text="Cena navideña"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/papelera"
            android:layout_width="79dp"
            android:layout_height="50dp"
            android:src="@drawable/papeleracerrada"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="75dp"
            android:layout_rowSpan="3"
            android:src="@drawable/usuario" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usuario"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:text="Maria Salazar"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="25dp"
                    android:text="para"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/destinatario"
                    android:layout_width="157dp"
                    android:layout_height="25dp"
                    android:text="mí"
                    android:textSize="15sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/fecha"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_rowSpan="2"
                android:text="2:52 PM"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/contenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Hola Ana, cómo estas te escribo para invirate a la fiesta de finde año. \n\nEspero asistas. \n\nUn saludo."
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/respondermensaje" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/reenviarmensaje" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:text="Responder"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="50dp"
            android:text="Reenviar"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>